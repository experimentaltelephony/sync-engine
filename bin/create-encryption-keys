#!/usr/bin/env python
import binascii

import yaml
import nacl.secret
import nacl.utils


def main():
    from inbox.config import config

    # If the config contains encryption keys, don't override.
    if config.get('SECRET_ENCRYPTION_KEY'):
        raise Exception('Encryption keys already present in secrets config file')

    # Generate keys
    data = {
        'SECRET_ENCRYPTION_KEY': binascii.hexlify(
            nacl.utils.random(nacl.secret.SecretBox.KEY_SIZE)),
        'BLOCK_ENCRYPTION_KEY': binascii.hexlify(
            nacl.utils.random(nacl.secret.SecretBox.KEY_SIZE))
    }

    # Our secrets config file contains our database credentials etc.,
    # so it better exist.
    # Update it
    try:
        with open('/etc/inboxapp/secrets.yml', 'a') as f:
            print 'Writing keys to secrets config file'
            yaml.dump(data, f, default_flow_style=False)
    except IOError:
        raise Exception('Check file write permissions on config file')

    # Update the config dict
    config.update(data)


if __name__ == '__main__':
    main()
